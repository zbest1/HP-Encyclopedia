<% include ../partials/head.ejs %>
<body>
    <style>
         label {
            display: line-block;
            width: 50px; 
            text-align: left;
            background-color: rgb(75,30,19,.5)
         }
    </style>
    <h2 id="hptitle">
            Harry Potter Encyclopedia
        </h2>
        <nav class="nav-top">
            <a href="/HP_Encyclopedia"><button>Home</button></a>
            <a href="/HP_Encyclopedia/mainContent/mainSearch"><button>Search & Index</button></a>
        </nav>
        <br>
    <div class="form-bkgnd">
        <h2>Edit</h2>
        <hr>
        <form action="/HP_Encyclopedia/mainContent/mainSearch" method=POST>
            <label for="name">Name: </label>
            <input type="text" name="name" value="<%=findEntry.name%>">
            <br>
            <br>
            <label for="description">Description: </label> 
            <input type="textarea" name="description" value="<%=findEntry.description%>">
            <br>
            <br>
            <label for="img">Image: </label>  
            <input type="text" name="img" id="imgCreateNew" value="<%=findEntry.img%>">
            <br>
            <br>
            <input type="submit" id="submit" value="Update" />
        </form>
        <hr>
    </div>
</body>
</html>