<% include ../partials/head.ejs %>
<body>
<style>
    ul {
        display: inline-block;
        list-style-type: none;
    }
    li {
        text-align: left;
        font-size: 25px;
        text-indent: -20px;
    }
</style>
    <h2 id="hptitle">
        Harry Potter Encyclopedia
    </h2>
    <nav>
        <a href="/HP_Encyclopedia/mainContent/mainNew"><button>Add New</button></a>
    </nav>
    <br>
    <div class="mozaicSearch">
        <%for(let i=0; i < allEntries.length; i++){ %>
        <div>
        <a href="/HP_Encyclopedia/mainContent/mainDetail/<%=allEntries[i].id%>"><img class="entryImg shadowImg child" src="<%=allEntries[i].img%>"></a>
        </div>
        <%}%>
    </div>
    <br>
    <br>
    <hr>

    <div class="form-bkgnd">
        <div class="entry-name">
            <h2><%=thisEntry.name%></h2>
        </div>
        <div class="detail-img">
            <img class="detailImg" src="<%=thisEntry.img%>">
        </div>
        <div class="entry-details">
            <table class="details-center">
                <tr>
                    <td>Description:</td>
                    <td><%=thisEntry.description%></td>
                </tr>
                <tr>
                    <td>Likes:</td>
                    <td><%=thisEntry.likes%></td>
                </tr>
            </table>
        </div>
        <div class="nav-bottom">
            <ul>
           <li>
               <a href="/HP_Encyclopedia/mainContent/mainEdit/<%=thisEntry._id%>"><button id="editBtn">Edit</button></a>
            </li>
            <li>
                <form action="/HP_Encyclopedia/mainContent/mainSearch/<%=thisEntry._id%>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete"/>
                </form>
            </li>
            </ul>
            <hr>
        </div>
    </div>
</body>
</html>